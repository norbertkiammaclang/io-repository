{

        "variables": {
                "aws_access_key": "$1",
                "aws_secret_key": "$2"

        },

        "builders": [{
                "type": "amazon-ebs",
                "access_key": "{{user `aws_access_key`}}",
                "secret_key": "{{user `aws_secret_key`}}",
                "region": "us-east-1",
                "source_ami": "ami-e7527ed7",
                "instance_type": "t2.micro",
                "ssh_username": "ec2-user",
                "ami_name": "packer-amazonlinux {{timestamp}}",
                "iam_instance_profile": "FullAccess"
                   }],

        "provisioners": [{
                "type": "shell",
                "inline":	[
                "sleep 60",
                "sudo yum update -y",
                "sudo yum install httpd php php-mysql mysql mysql-server -y",
							]

                        }]

}
